{
    "manifest_version": 3,
    "name": "FPT Portal Link Enhancer",
    "version": "1.0",
    "description": "Improves the visibility of links on the FPT University Academic Portal",
    "permissions": [
      "https://fap.fpt.edu.vn/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://fap.fpt.edu.vn/CmsFAP/News.aspx","https://fap.fpt.edu.vn/CmsFAP/PlusNews.aspx"],
        "css": ["styles.css"],
        "js": ["content.js"]
      }
    ]
  }